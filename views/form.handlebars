<div class="container">
    <form>
        <div class="form-group recipeName">
            <label for="exampleInputEmail1">Recipe Name</label>
            <input type="email" class="form-control" id="name" aria-describedby="emailHelp" placeholder="Name of Recipe">
        </div>
        <div class="form-group description">
            <label for="exampleInputPassword1">Description</label>
            <input type="password" class="form-control" id="description" placeholder="description">
        </div>
        <div class="form-group ingredients">
            <label for="exampleTextarea">Ingredients</label>
            <textarea class="form-control" id="ingredients" rows="10"></textarea>
        </div>
        <div class="form-group instruct">
            <label for="exampleTextarea">Instructions</label>
            <textarea class="form-control" id="instruct" rows="10"></textarea>
        </div>
        <div class="form-group category">
            <label for="exampleSelect1">Category</label>
            <select class="form-control" id="catgory">
                <option>Appertizer</option>
                <option>Dessert</option>
                <option>Poutry</option>
                <option>Seafood</option>
                <option>Soup</option>
                <option>Sandwich</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>