<div class="container">
    <form class="recipe-form p-2 mt-1">
        <div class="form-group recipeName">
            <label>Recipe Name</label>
            <input class="form-control" id="name" placeholder="Name of Recipe" required>
        </div>
        <div class="form-group description">
            <label>Description</label>
            <input class="form-control" id="description" placeholder="Recipe Description" required>
        </div>
        <div class="form-group ingredients">
            <label>Ingredients</label>
            <textarea class="form-control" id="ingredients" rows="10" required></textarea>
        </div>
        <div class="form-group instruct">
            <label>Instructions</label>
            <textarea class="form-control" id="instruct" rows="10" required></textarea>
        </div>
        <div class="form-group category">
            <label>Select a Category</label>
            <select class="form-control" id="category">
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary submit">Submit</button>
    </form>
</div>