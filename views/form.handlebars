<div class="container form-div">
    <form class="recipe-form p-2 mt-1">
        <div class="form-group recipeName">
            <label>Recipe Name</label>
            <input class="form-control validate1" id="name" placeholder="Name of Recipe" required>
        </div>
        <div class="form-group description">
            <label>Description</label>
            <input class="form-control validate1" id="description" placeholder="Recipe Description" required>
        </div>
        <div class="form-group ingredients">
            <label>Ingredients</label>
            <textarea class="form-control validate1" id="ingredients" rows="10" required></textarea>
        </div>
        <div class="form-group instruct">
            <label>Instructions</label>
            <textarea class="form-control validate1" id="instruct" rows="10" required></textarea>
        </div>
        <div class="form-group category">
            <label for="exampleSelect1">Select a Category</label>
            <select class="form-control" id="category">
                <option>Appertizer</option>
                <option>Poutry</option>
                <option>Seafood</option>
                <option>Soup</option>
                <option>Sandwich</option>
            </select>
        </div>

        <button type="submit" class="btn btn-primary submit">Submit</button>
    </form>
</div>